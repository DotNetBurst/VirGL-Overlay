<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/panelBg"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/spinnerBg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="Editor window"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/editorSettings"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:text="SETTINGS" />

        <Button
            android:id="@+id/close"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginEnd="2dp"
            android:text="EXIT" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/controlsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/inputProfiles"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:foreground="@color/lighterRecordBg"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:popupBackground="@color/darkGray" />

                <Button
                    android:id="@+id/addProfile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0"
                    android:text="+" />

                <Button
                    android:id="@+id/removeProfile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0"
                    android:text="x" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="0"
            android:background="@color/white">

        </FrameLayout>

        <com.catfixture.virgloverlay.ui.custom.WarningComponent
            android:id="@+id/noProfilesErr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="10dp"
            app:warningText="Create profile first!" />

        <com.catfixture.virgloverlay.ui.custom.WarningComponent
            android:id="@+id/noItemErr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="10dp"
            app:warningText="Create or select control element!">

        </com.catfixture.virgloverlay.ui.custom.WarningComponent>

        <LinearLayout
            android:id="@+id/controlsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/controlType"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:foreground="@color/lighterRecordBg"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:popupBackground="@color/darkGray" />

                <Button
                    android:id="@+id/removeControl"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="0"
                    android:text="REMOVE" />

            </LinearLayout>

            <Spinner
                android:id="@+id/buttonCode"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/white"
                android:foreground="@color/lighterRecordBg"
                android:paddingStart="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:popupBackground="@color/darkGray" />

            <TextView
                android:id="@+id/handleSizeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:text="Handle size : 0%"
                android:textColor="@color/white" />

            <SeekBar
                android:id="@+id/handleSize"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="280"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:progress="80"
                android:progressBackgroundTint="@color/white" />

            <TextView
                android:id="@+id/opacitySliderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:text="Opacity : 0%"
                android:textColor="@color/white" />

            <SeekBar
                android:id="@+id/opacitySlider"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="80"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:progress="80"
                android:progressBackgroundTint="@color/white" />

            <TextView
                android:id="@+id/sizeSliderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:text="Size : 0%"
                android:textColor="@color/white" />

            <SeekBar
                android:id="@+id/sizeSlider"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="280"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:progress="100"
                android:progressBackgroundTint="@color/white" />
        </LinearLayout>

        <Button
            android:id="@+id/createControl"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:text="Create control element" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/settingsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/uiOpacityText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:text="UI Opacity : 100%"
            android:textColor="@color/white" />

        <SeekBar
            android:id="@+id/uiOpacity"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="80"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:progress="100"
            android:progressBackgroundTint="@color/white" />

    </LinearLayout>

</LinearLayout>