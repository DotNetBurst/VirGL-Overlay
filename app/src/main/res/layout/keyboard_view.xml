<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/fx_kb_background"
    android:gravity="center_horizontal"
    android:padding="0dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            style="@style/FXKeyboardButton"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="q" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="w" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="e" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="r" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="t" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="y" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="u" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="i" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="o" />

        <Button
            android:id="@+id/button41"
            style="@style/FXKeyboardButton"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="p" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:text="a" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:text="s" />

        <Button

            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:text="d" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:text="f" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:text="g" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:text="h" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:text="j" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:text="k" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:text="l" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/FXKeyboardButton"
            android:layout_weight="1.5"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/fx_kb_shift_key" />
        </LinearLayout>

        <Button
            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:text="z" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:text="x" />

        <Button

            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:text="c" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:text="v" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:text="b" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:text="n" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:text="m" />

        <LinearLayout
            style="@style/FXKeyboardButton"
            android:layout_weight="1.5"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/fx_kb_backspace_key" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="123" />

        <Button
            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="Fn" />

        <LinearLayout
            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/fx_kb_lang_key" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#E1E3E2"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="QWERTY"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            style="@style/FXKeyboardButton"
            android:layout_weight="1"
            android:text="." />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:padding="5dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E1E3E2"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/fx_kb_enter_key" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>